FROM node:16-alpine3.11

RUN npm install -g dockerfilelint
RUN apk --no-cache add bash

SHELL ["/bin/bash", "-c"]
CMD test ! -d /lint-output/dockerfilelint && mkdir /lint-output/dockerfilelint ; \
    for f in /lint-input/*/*/* ; \
    do \
        SUBDIR_FILE=${f/\/lint-input\/} ; \
        SUBDIRECTORIES=$(cut -d'/' -f 1-2 <<< "$SUBDIR_FILE") ; \
        SUBDIRECTORY=$(cut -d'/' -f 1 <<< "$SUBDIRECTORIES") ; \
        FILENAME=$(cut -d'/' -f 3 <<< "$SUBDIR_FILE") ; \
        test ! -d /lint-output/dockerfilelint/$SUBDIRECTORY && mkdir /lint-output/dockerfilelint/$SUBDIRECTORY ; \
        test ! -d /lint-output/dockerfilelint/$SUBDIRECTORIES && mkdir /lint-output/dockerfilelint/$SUBDIRECTORIES ; \
        dockerfilelint "$f" > /lint-output/dockerfilelint/$SUBDIRECTORIES/$FILENAME ; \
    done